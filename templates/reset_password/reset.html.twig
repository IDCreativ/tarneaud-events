{% extends 'blank.html.twig' %}

{% block title %}Mot de passe oublié | {{ parent() }}{% endblock %}

{% block body %}
    <div class="container py-5">
        <div class="row">
            <div class="col-md-6 mx-auto">
                <div class="card">
                    <div class="card-header">
                        Mot de passe oublié
                    </div>
                    <div class="card-body">
                        {{ form_start(resetForm) }}
                            {{ form_row(resetForm.plainPassword) }}
                            <button class="btn btn-primary">Réinitialisez le mot de passe</button>
                        {{ form_end(resetForm) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
