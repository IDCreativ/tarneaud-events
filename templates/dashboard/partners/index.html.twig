{% extends 'admin.html.twig' %}

{% block title %}Partenaires - {{ parent() }}{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col d-flex justify-content-between mb-4">
            <h1>Partenaires - Liste</h1>
            <div class="">
                <a class="btn btn-primary" href="{{ path('partners_new') }}"><i class="fal fa-plus"></i></a>
            </div>
        </div>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col">
            <div class="card shadow-sm">
                <div class="card-body">
                    {% if partners|length > 0 %}
                        <table class="table table-bordered align-middle">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Nom</th>
                                    <th>Logo</th>
                                    <th>Mis en avant</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                            {% for partner in partners %}
                                <tr>
                                    <td>{{ partner.id }}</td>
                                    <td>{{ partner.name }}</td>
                                    <td><img src="uploads/partners/{{ partner.logo }}" alt="" style="height: 39px;"></td>
                                    <td>{{ partner.featured ? 'Oui' : 'Non' }}</td>
                                    <td>
                                        {# <a class="btn btn-outline-success btn-action" href="{{ path('partners_show', {'id': partner.id}) }}"><i class="fal fa-eye fa-fw"></i></a> #}
                                        <a class="btn btn-outline-warning btn-action" href="{{ path('partners_edit', {'id': partner.id}) }}"><i class="fal fa-pen fa-fw"></i></a>
                                        {{ include('dashboard/partners/_delete_form.html.twig') }}
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    {% else %}
                    <div class="alert alert-info text-center" role="alert">
                        Pas d'enregistrement pour le moment.
                    </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>

{% endblock %}
