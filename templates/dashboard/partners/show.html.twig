{% extends 'admin.html.twig' %}

{% block title %}Partenaire{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col mb-4">
            <h1>{{ partner }}</h1>
        </div>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col">
            <table class="table table-bordered">
                <tbody>
                    <tr>
                        <th>#</th>
                        <td>{{ partner.id }}</td>
                    </tr>
                    <tr>
                        <th>Featured</th>
                        <td>{{ partner.featured ? 'Oui' : 'Non' }}</td>
                    </tr>
                    <tr>
                        <th>Nom</th>
                        <td>{{ partner.name }}</td>
                    </tr>
                    <tr>
                        <th>Logo</th>
                        <td><img src="/uploads/partners/{{ partner.logo }}" alt=""></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
<div class="container mt-3">
    <div class="row">
        <div class="col">
            <a href="{{ path('partners_index') }}"><i class="fal fa-long-arrow-left me-1"></i>Retour</a>
        </div>
    </div>
</div> 
{% endblock %}
