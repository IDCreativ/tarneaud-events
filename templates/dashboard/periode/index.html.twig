{% extends 'admin.html.twig' %}

{% block title %}Périodes - {{ parent() }}{% endblock %}

{% block body %}
 <div class="container">
    <div class="row">
        <div class="col d-flex justify-content-between mb-4">
            <h1>Périodes - Liste</h1>
            <div class="">
                <a class="btn btn-primary" href="{{ path('periode_new') }}"><i class="fal fa-plus"></i></a>
            </div>
        </div>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col">
            {% if periodes|length > 0 %}
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Nom</th>
                            <th>Début</th>
                            <th>Fin</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for periode in periodes %}
                        <tr>
                            <td>{{ periode.id }}</td>
                            <td>{{ periode.name }}</td>
                            <td>{{ periode.dateStart ? periode.dateStart|date('Y-m-d H:i:s') : '' }}</td>
                            <td>{{ periode.dateEnd ? periode.dateEnd|date('Y-m-d H:i:s') : '' }}</td>
                            <td>
                                <a class="btn btn-outline-success btn-action" href="{{ path('periode_show', {'id': periode.id}) }}"><i class="fal fa-eye fa-fw"></i></a>
                                <a class="btn btn-outline-warning btn-action" href="{{ path('periode_edit', {'id': periode.id}) }}"><i class="fal fa-pen fa-fw"></i></a>
                                {{ include('dashboard/periode/_delete_form.html.twig') }}
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            {% else %}
                <div class="alert alert-info text-center" role="alert">
                    Pas d'enregistrement pour le moment.
                </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
