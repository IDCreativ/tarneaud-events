<div class="row">
	{% for poll in polls %}
		<div class="col-12">
			<div class="poll-card card mb-2">
				<div class="card-body d-flex justify-content-between align-items-center">
					<div class="poll-name me-3">
						{{ poll }}
					</div>
					<div class="poll-actions">

						<a class="js-status">
							<span class="js-poll-status">
								<div class="form-check form-switch">
									<input class="form-check-input js-poll-status-switch" type="checkbox" data-poll="{{ poll.id }}" id="poll-switch-{{ poll.id }}" {% if poll.status == true %} checked {% endif %}>
								</div>
							</span>
						</a>
						{% if poll.visibility == true %}
							<a class="js-poll-switch btn btn-sm btn-success" id="poll-visible-{{ poll.id }}" data-visible="true" data-poll="{{ poll.id }}">
								<i class="fal fa-eye"></i>
							</a>
						{% else %}
							<a class="js-poll-switch btn btn-sm btn-outline-dark" id="poll-visible-{{ poll.id }}" data-visible="false" data-poll="{{ poll.id }}">
								<i class="fal fa-eye-slash"></i>
							</a>
						{% endif %}
						<a class="js-pollresults btn btn-sm btn-outline-dark" id="poll-results-{{ poll.id }}" data-poll="{{ poll.id }}" data-results="false">
							<i class="fal fa-chart-pie-alt"></i>
						</a>
					</div>
				</div>
			</div>
		</div>
	{% endfor %}
</div>
