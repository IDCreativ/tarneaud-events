{% extends 'admin.html.twig' %}

{% block title %}Catégories - {{ parent() }}{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col d-flex justify-content-between mb-4">
            <h1>Catégories - Liste</h1>
            <div class="">
                <a class="btn btn-primary" href="{{ path('category_new') }}"><i class="fal fa-plus"></i></a>
            </div>
        </div>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col">
            <div class="card shadow-sm">
                <div class="card-body">
                    {% if categories|length > 0 %}
                        <table class="table table-bordered align-middle">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Nom</th>
                                    <th>Description</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                            {% for category in categories %}
                                <tr>
                                    <td>{{ category.id }}</td>
                                    <td>{{ category.name }}</td>
                                    <td>{{ category.description|raw }}</td>
                                    <td>
                                        {# <a class="btn btn-outline-success btn-action" href="{{ path('category_show', {'id': category.id}) }}"><i class="fal fa-eye fa-fw"></i></a> #}
                                        <a class="btn btn-outline-warning btn-action" href="{{ path('category_edit', {'id': category.id}) }}"><i class="fal fa-pen fa-fw"></i></a>
                                        {{ include('dashboard/category/_delete_form.html.twig') }}
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    {% else %}
                        <div class="alert alert-info text-center" role="alert">
                            Pas d'enregistrement pour le moment.
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
