{% extends 'admin.html.twig' %}

{% block title %}Question{% endblock %}

{% block body %}
    <h1>Question</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ question.id }}</td>
            </tr>
            <tr>
                <th>Question</th>
                <td>{{ question.question }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ question.status ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Firstname</th>
                <td>{{ question.firstname }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ question.lastname }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ question.email }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('question_index') }}">back to list</a>

    <a href="{{ path('question_edit', {'id': question.id}) }}">edit</a>

    {{ include('dashboard/question/_delete_form.html.twig') }}
{% endblock %}
