{% extends 'admin.html.twig' %}

{% block title %}Feedback -
	{{ parent() }}
{% endblock %}

{% block body %}
	<div class="container">
		<div class="row">
			<div class="col mb-4">
				<h1>Feedback
					#{{ feedback.id }}</h1>
			</div>
		</div>
	</div>
	<div class="container">
		<div class="row">
			<div class="col">
				<div class="card shadow-sm">
					<div class="card-body">
						{{ feedback.description }}
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="container mt-3">
		<div class="row">
			<div class="col">
				<a href="{{ path('app_feedback_index') }}">
					<i class="fal fa-long-arrow-left me-1"></i>Retour</a>
			</div>
		</div>
	</div>
{% endblock %}
